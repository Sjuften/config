# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
}

order += "tztime local"
order += "battery 0"
order += "wireless _first_"
order += "ethernet _first_"
order += "cpu_usage"

wireless _first_ {
        # format_up = "%quality at %essid"
        format_up = "%essid"
        format_down = ""
}
ethernet _first_ {
        # if you use %speed, i3status requires the cap_net_admin capability
        # format_up = "E: %ip (%speed)"
        format_up = "E: %ip"
        format_down = ""
}

cpu_usage {
	format = "CPU: %usage"
	degraded_threshold = 60
	max_threshold = 85

}
battery 0 {
        format = "%status %percentage"
        format_down = ""
        status_chr = "âš¡ CHARGING"
        status_bat = "ðŸ”‹ BATTERY"
        status_unk = "? UNK"
        status_full = "ðŸ”‹ BATTERY"
        status_unk = "? UNK"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

battery all {
        format = "Power: %percentage"
}

tztime local {
        format = "âŒš %H:%M:%S"
}
